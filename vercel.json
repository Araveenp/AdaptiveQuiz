{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/auth/(.*)", "dest": "/api/index.py" },
    { "src": "/content/(.*)", "dest": "/api/index.py" },
    { "src": "/quiz/(.*)", "dest": "/api/index.py" },
    { "src": "/admin/(.*)", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
